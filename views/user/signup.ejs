<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Signup Page</title>
  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <style>
    body {
      background-color: #f5f5f5;
    }

    .signup-container {
      min-height: 100vh;
    }

    .form-container {
      background-color: #fff;
      padding: 40px;
      border-radius: 8px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-container h1 {
      font-size: 28px;
      font-weight: bold;
      text-align: center;
      margin-bottom: 20px;
    }

    .input-group-text {
      background-color: #e9ecef;
      border: none;
    }

    .form-control {
      border-left: none;
    }

    .google-btn {
      display: flex;
      align-items: center;
      justify-content: center;
      border: 1px solid #ccc;
    }

    .google-btn img {
      margin-right: 10px;
    }

    .image-container img {
      border-radius: 8px;
      object-fit: cover;
      height: 100%;
      width: 100%;
    }

    @media (max-width: 992px) {
      .image-container {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="container-fluid d-flex justify-content-center align-items-center signup-container">
    <div class="row w-100 mx-2">
      <!-- Signup Form Section -->
      <div class="col-lg-6 col-md-8 mx-auto form-container">
        <h1>Signup</h1>
        <form  method="post" action="/signup">
          <div class="input-group mb-3">
            <span class="input-group-text">
              <i class="bi bi-person-fill"></i>
            </span>
            <input type="text" class="form-control" name="name"  id="name"  placeholder="Name" required>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">
              <i class="bi bi-envelope-fill"></i>
            </span>
            <input type="email" class="form-control" name="email" id="email"  placeholder="Email" required>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">
              <i class="bi bi-telephone-fill"></i>
            </span>
            <input type="tel" class="form-control" name="phone" id="phone"   placeholder="Phone" required>
          </div>
          <div class="input-group mb-4">
            <span class="input-group-text">
              <i class="bi bi-lock-fill"></i>
            </span>
            <input type="password" class="form-control" name="password"  id="password"   placeholder="Password" required>
          </div>
          <button type="submit" class="btn btn-primary w-100 mb-3">Signup</button>
          <button type="button" class="btn google-btn w-100 mb-3">
            <img src="https://img.icons8.com/color/24/google-logo.png" alt="Google Icon">
            Sign up with Google
          </button>
          <p class="text-center">
            Already have an account? <a href="#" class="text-primary">Sign in</a>
          </p>
        </form>
      </div>
      <!-- Image Section -->
      <div class="col-lg-6 image-container d-none d-lg-block">
        <img src="/img/project img 1.jpg" alt="Signup Page Image">
      </div>
    </div>
  </div>

  <!-- Bootstrap Bundle JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  ></script>
  <!-- Bootstrap Icons -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
    rel="stylesheet"
  >
</body>
</html>
